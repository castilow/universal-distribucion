{
  "rules": {
    ".read": false,
    ".write": false,
    ".info": {
      "connected": {
        ".read": true,
        ".write": false
      }
    },
    "status": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['isOnline', 'lastActive']) && newData.child('isOnline').isBoolean() && newData.child('lastActive').isNumber()"
      }
    }
  }
}












