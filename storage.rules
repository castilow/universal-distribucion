rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload files to their own directory
    // Read: permitir lectura pública si tiene token válido o usuario autenticado
    // Write: solo el propietario puede subir
    match /uploads/{userId}/{allPaths=**} {
      // Permitir lectura si el usuario está autenticado o si tiene un token válido
      // Los tokens se validan automáticamente por Firebase
      allow read: if true;
      
      // Solo el propietario puede escribir en su directorio
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource != null &&
                      request.resource.size < 500 * 1024 * 1024; // Max 500MB
      
      // Permitir crear nuevos archivos
      allow create: if request.auth != null && 
                       request.auth.uid == userId &&
                       request.resource != null &&
                       request.resource.size < 500 * 1024 * 1024;
      
      // Permitir actualizar archivos existentes
      allow update: if request.auth != null && 
                       request.auth.uid == userId &&
                       request.resource != null &&
                       request.resource.size < 500 * 1024 * 1024;
      
      // Permitir eliminar archivos
      allow delete: if request.auth != null && 
                       request.auth.uid == userId;
    }
    
    // Permitir acceso a productos (para imágenes de productos)
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
                      request.resource != null &&
                      request.resource.size < 10 * 1024 * 1024; // Max 10MB para imágenes de productos
    }
  }
} 